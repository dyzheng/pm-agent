{
  "task_id": "FE-000",
  "title": "赝势库调研与收集",
  "specialist": "research_agent",

  "goal": "系统调研所有公开可用的稀土f_in_valence模守恒赝势，输出可用性矩阵和质量评级，为FE-100（赝势生成）提供决策依据——哪些元素可以直接用现有赝势，哪些必须自己生成。",

  "survey_targets": [
    {
      "library": "PseudoDojo (ONCVPSP)",
      "url": "http://www.pseudo-dojo.org/",
      "check": "NC-SR-04 和 NC-FR-04 表中稀土元素覆盖情况，是否有f_in_valence版本，Delta-test结果",
      "format": "UPF / psp8"
    },
    {
      "library": "PSlibrary (QE)",
      "url": "https://dalcorso.github.io/pslibrary/",
      "check": "ONCVPSP和RRKJUS赝势中稀土覆盖，注意区分f_in_core vs f_in_valence",
      "format": "UPF"
    },
    {
      "library": "GBRV",
      "url": "https://www.physics.rutgers.edu/gbrv/",
      "check": "ultrasoft为主，但可能有NC版本参考",
      "format": "UPF"
    },
    {
      "library": "SG15",
      "url": "http://www.quantum-simulation.org/potentials/sg15_oncv/",
      "check": "ONCV NC赝势，检查稀土覆盖和f处理方式",
      "format": "UPF"
    },
    {
      "library": "JTH (ABINIT PAW)",
      "url": "https://www.abinit.org/jth",
      "check": "PAW数据集，虽然不能直接用但可作为参考构型和截断半径的参考",
      "format": "PAW XML"
    },
    {
      "library": "文献中的定制赝势",
      "check": "搜索近5年文献中用ONCVPSP/APE为稀土生成NC赝势的工作，收集输入参数",
      "keywords": ["rare earth pseudopotential ONCVPSP", "lanthanide norm-conserving", "f-in-valence pseudopotential generation"]
    }
  ],

  "elements": ["La", "Ce", "Pr", "Nd", "Sm", "Eu", "Gd", "Tb", "Dy", "Ho", "Er", "Yb", "Lu"],
  "priority_elements": ["Ce", "Gd", "La", "Nd", "Sm", "Eu", "Tb"],

  "output_format": {
    "per_element": {
      "element": "symbol",
      "available_pp": [
        {
          "library": "source library",
          "type": "NC-SR / NC-FR / US / PAW",
          "f_treatment": "f_in_valence / f_in_core / frozen_core",
          "valence_config": "e.g. 4f1 5s2 5p6 5d1 6s2",
          "lmax": "max angular momentum",
          "ecutwfc_hint": "recommended cutoff (Ry)",
          "delta_test": "meV/atom if available",
          "ghost_state": "clean / suspected / unknown",
          "url": "download link"
        }
      ],
      "recommendation": "USE_EXISTING / NEED_GENERATION / NEED_TESTING",
      "notes": "any caveats"
    }
  },

  "acceptance_criteria": [
    "覆盖7种优先元素的完整调研",
    "每种元素至少标注一个推荐赝势来源或标记为NEED_GENERATION",
    "收集至少3篇稀土NC赝势生成的参考文献及其ONCVPSP输入参数"
  ]
}
